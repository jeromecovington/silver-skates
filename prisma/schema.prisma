generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id               String   @id @default(cuid())
  title            String
  body             String
  source           String
  publishedAt      DateTime
  biasRating       String?
  credibilityScore Float?
  clusters         String[]
  keywords         String[]  // e.g., ["inflation", "legislation"]
  embedding        Float[]   // 384-dim vector from MiniLM
  createdAt        DateTime @default(now())
}
